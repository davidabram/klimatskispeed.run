---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Prvi hrvatski Any% speedrun plaćen iz državnog proračuna." />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

    <meta property="og:url" content="https://www.klimatskispeed.run/">
    <meta property="og:type" content="website">
    <meta property="og:title" content={title}>
    <meta property="og:description" content="Prvi hrvatski Any% speedrun plaćen iz državnog proračuna.">
    <meta property="og:image" content="https://klimatskispeed.run/og.png">

    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="klimatskispeed.run">
    <meta property="twitter:url" content="https://www.klimatskispeed.run/">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content="Prvi hrvatski Any% speedrun plaćen iz državnog proračuna.">
    <meta name="twitter:image" content="https://klimatskispeed.run/og.png">
	</head>
	<body class="bg-[#f9f7f6]">
		<slot />
	</body>
</html>
